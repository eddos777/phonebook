{% extends 'base.html.twig' %}

{% block body %}

    <form action="{{ path("update", {"id": product.id}) }}" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{ product.name }}">
        </div>
        <div class="form-group">
            <label for="number">Number</label>
            <input type="number" class="form-control" id="number" name="number" placeholder="Number"  value="{{ product.number }}">
        </div><div class="form-group">
            <label for="about">Count</label>
            <input type="text" class="form-control" id="about" name="about" placeholder="About" value="{{ product.about }}">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>

{% endblock %}